{
  "title": "Protocol Monitor Dashboard",
  "tags": ["defi", "monitoring"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "panels": [
    {
      "id": 1,
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "type": "timeseries",
      "title": "Total Value Locked (TVL) Over Time",
      "datasource": {
        "type": "postgres",
        "uid": "PCC52D03280B7034C"
      },
      "targets": [
        {
          "datasource": {
            "type": "postgres",
            "uid": "PCC52D03280B7034C"
          },
          "format": "time_series",
          "rawSql": "SELECT timestamp AS \"time\", protocol_name as metric, tvl_usd as value FROM protocol_snapshots WHERE $__timeFilter(timestamp) ORDER BY timestamp",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "fillOpacity": 10,
            "showPoints": "auto"
          },
          "unit": "currencyUSD"
        }
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      }
    },
    {
      "id": 2,
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "type": "timeseries",
      "title": "APY Over Time",
      "datasource": {
        "type": "postgres",
        "uid": "PCC52D03280B7034C"
      },
      "targets": [
        {
          "datasource": {
            "type": "postgres",
            "uid": "PCC52D03280B7034C"
          },
          "format": "time_series",
          "rawSql": "SELECT timestamp AS \"time\", protocol_name as metric, apy_7d as value FROM protocol_snapshots WHERE $__timeFilter(timestamp) ORDER BY timestamp",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "fillOpacity": 10,
            "showPoints": "auto"
          },
          "unit": "percent"
        }
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      }
    },
    {
      "id": 3,
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      },
      "type": "timeseries",
      "title": "Utilization Rate",
      "datasource": {
        "type": "postgres",
        "uid": "PCC52D03280B7034C"
      },
      "targets": [
        {
          "datasource": {
            "type": "postgres",
            "uid": "PCC52D03280B7034C"
          },
          "format": "time_series",
          "rawSql": "SELECT timestamp AS \"time\", protocol_name as metric, utilization_rate * 100 as value FROM protocol_snapshots WHERE $__timeFilter(timestamp) ORDER BY timestamp",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "fillOpacity": 10,
            "showPoints": "auto"
          },
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": null,
                "color": "green"
              },
              {
                "value": 80,
                "color": "yellow"
              },
              {
                "value": 95,
                "color": "red"
              }
            ]
          }
        }
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      }
    },
    {
      "id": 4,
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 8
      },
      "type": "table",
      "title": "Recent Alerts",
      "datasource": {
        "type": "postgres",
        "uid": "PCC52D03280B7034C"
      },
      "targets": [
        {
          "datasource": {
            "type": "postgres",
            "uid": "PCC52D03280B7034C"
          },
          "format": "table",
          "rawSql": "SELECT protocol_name, alert_type, severity, message, triggered_at, CASE WHEN resolved_at IS NULL THEN 'open' ELSE 'resolved' END as status FROM protocol_alerts ORDER BY triggered_at DESC LIMIT 20",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {},
        "overrides": [
          {
            "matcher": {
              "id": "byName",
              "options": "severity"
            },
            "properties": [
              {
                "id": "custom.cellOptions",
                "value": {
                  "type": "color-background"
                }
              },
              {
                "id": "mappings",
                "value": [
                  {
                    "type": "value",
                    "options": {
                      "CRITICAL": {
                        "color": "red",
                        "index": 0
                      },
                      "WARNING": {
                        "color": "orange",
                        "index": 1
                      },
                      "INFO": {
                        "color": "blue",
                        "index": 2
                      }
                    }
                  }
                ]
              }
            ]
          }
        ]
      },
      "options": {
        "showHeader": true,
        "cellHeight": "sm",
        "footer": {
          "show": false
        }
      }
    },
    {
      "id": 5,
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 0,
        "y": 16
      },
      "type": "stat",
      "title": "Total Protocols",
      "datasource": {
        "type": "postgres",
        "uid": "PCC52D03280B7034C"
      },
      "targets": [
        {
          "datasource": {
            "type": "postgres",
            "uid": "PCC52D03280B7034C"
          },
          "format": "table",
          "rawSql": "SELECT COUNT(DISTINCT protocol_name) as value FROM protocol_snapshots",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": null,
                "color": "blue"
              }
            ]
          }
        }
      },
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
        },
        "textMode": "value_and_name",
        "colorMode": "background"
      }
    },
    {
      "id": 6,
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 6,
        "y": 16
      },
      "type": "stat",
      "title": "Open Alerts",
      "datasource": {
        "type": "postgres",
        "uid": "PCC52D03280B7034C"
      },
      "targets": [
        {
          "datasource": {
            "type": "postgres",
            "uid": "PCC52D03280B7034C"
          },
          "format": "table",
          "rawSql": "SELECT COUNT(*) as value FROM protocol_alerts WHERE resolved_at IS NULL",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": null,
                "color": "green"
              },
              {
                "value": 1,
                "color": "orange"
              },
              {
                "value": 5,
                "color": "red"
              }
            ]
          }
        }
      },
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
        },
        "textMode": "value_and_name",
        "colorMode": "background"
      }
    },
    {
      "id": 7,
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 12,
        "y": 16
      },
      "type": "stat",
      "title": "Critical Alerts",
      "datasource": {
        "type": "postgres",
        "uid": "PCC52D03280B7034C"
      },
      "targets": [
        {
          "datasource": {
            "type": "postgres",
            "uid": "PCC52D03280B7034C"
          },
          "format": "table",
          "rawSql": "SELECT COUNT(*) as value FROM protocol_alerts WHERE severity = 'CRITICAL' AND resolved_at IS NULL",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": null,
                "color": "green"
              },
              {
                "value": 1,
                "color": "red"
              }
            ]
          }
        }
      },
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
        },
        "textMode": "value_and_name",
        "colorMode": "background"
      }
    },
    {
      "id": 8,
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 18,
        "y": 16
      },
      "type": "stat",
      "title": "Total TVL",
      "datasource": {
        "type": "postgres",
        "uid": "PCC52D03280B7034C"
      },
      "targets": [
        {
          "datasource": {
            "type": "postgres",
            "uid": "PCC52D03280B7034C"
          },
          "format": "table",
          "rawSql": "SELECT SUM(tvl_usd) as value FROM (SELECT DISTINCT ON (protocol_name) protocol_name, tvl_usd FROM protocol_snapshots ORDER BY protocol_name, timestamp DESC) as latest",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "unit": "currencyUSD",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": null,
                "color": "blue"
              }
            ]
          }
        }
      },
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
        },
        "textMode": "value_and_name",
        "colorMode": "background"
      }
    }
  ]
}
