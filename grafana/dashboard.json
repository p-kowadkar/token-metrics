{
  "dashboard": {
    "title": "Protocol Monitor Dashboard",
    "tags": ["defi", "monitoring"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "type": "timeseries",
        "title": "Total Value Locked (TVL) Over Time",
        "targets": [
          {
            "format": "time_series",
            "group": [],
            "metricColumn": "none",
            "rawQuery": true,
            "rawSql": "SELECT\n  timestamp AS \"time\",\n  protocol_name,\n  tvl_usd\nFROM protocol_snapshots\nWHERE $__timeFilter(timestamp)\nORDER BY timestamp",
            "refId": "A",
            "select": [
              [
                {
                  "params": ["tvl_usd"],
                  "type": "column"
                }
              ]
            ],
            "table": "protocol_snapshots",
            "timeColumn": "timestamp",
            "timeColumnType": "timestamptz",
            "where": [
              {
                "name": "$__timeFilter",
                "params": [],
                "type": "macro"
              }
            ]
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10
            },
            "unit": "currencyUSD",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "options": {
          "tooltip": {
            "mode": "multi"
          },
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          }
        }
      },
      {
        "id": 2,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        },
        "type": "timeseries",
        "title": "APY (7-day) Over Time",
        "targets": [
          {
            "format": "time_series",
            "group": [],
            "metricColumn": "none",
            "rawQuery": true,
            "rawSql": "SELECT\n  timestamp AS \"time\",\n  protocol_name,\n  apy_7d\nFROM protocol_snapshots\nWHERE $__timeFilter(timestamp)\nORDER BY timestamp",
            "refId": "A",
            "select": [
              [
                {
                  "params": ["apy_7d"],
                  "type": "column"
                }
              ]
            ],
            "table": "protocol_snapshots",
            "timeColumn": "timestamp",
            "timeColumnType": "timestamptz",
            "where": [
              {
                "name": "$__timeFilter",
                "params": [],
                "type": "macro"
              }
            ]
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10
            },
            "unit": "percent",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "options": {
          "tooltip": {
            "mode": "multi"
          },
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          }
        }
      },
      {
        "id": 3,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "type": "timeseries",
        "title": "Utilization Rate Over Time",
        "targets": [
          {
            "format": "time_series",
            "group": [],
            "metricColumn": "none",
            "rawQuery": true,
            "rawSql": "SELECT\n  timestamp AS \"time\",\n  protocol_name,\n  utilization_rate * 100 as utilization_percent\nFROM protocol_snapshots\nWHERE $__timeFilter(timestamp)\n  AND utilization_rate IS NOT NULL\nORDER BY timestamp",
            "refId": "A",
            "select": [
              [
                {
                  "params": ["utilization_rate"],
                  "type": "column"
                }
              ]
            ],
            "table": "protocol_snapshots",
            "timeColumn": "timestamp",
            "timeColumnType": "timestamptz",
            "where": [
              {
                "name": "$__timeFilter",
                "params": [],
                "type": "macro"
              }
            ]
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10
            },
            "unit": "percent",
            "color": {
              "mode": "palette-classic"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "green"
                },
                {
                  "value": 80,
                  "color": "yellow"
                },
                {
                  "value": 95,
                  "color": "red"
                }
              ]
            }
          }
        },
        "options": {
          "tooltip": {
            "mode": "multi"
          },
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          }
        }
      },
      {
        "id": 4,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        },
        "type": "table",
        "title": "Recent Alerts",
        "targets": [
          {
            "format": "table",
            "group": [],
            "metricColumn": "none",
            "rawQuery": true,
            "rawSql": "SELECT\n  triggered_at,\n  protocol_name,\n  alert_type,\n  severity,\n  message,\n  CASE WHEN resolved_at IS NULL THEN 'Open' ELSE 'Resolved' END as status\nFROM protocol_alerts\nORDER BY triggered_at DESC\nLIMIT 50",
            "refId": "A",
            "select": [
              [
                {
                  "params": ["*"],
                  "type": "column"
                }
              ]
            ],
            "table": "protocol_alerts"
          }
        ],
        "options": {
          "showHeader": true,
          "sortBy": [
            {
              "displayName": "triggered_at",
              "desc": true
            }
          ]
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "displayMode": "auto"
            }
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "severity"
              },
              "properties": [
                {
                  "id": "custom.displayMode",
                  "value": "color-background"
                },
                {
                  "id": "mappings",
                  "value": [
                    {
                      "type": "value",
                      "options": {
                        "critical": {
                          "color": "red",
                          "index": 0
                        },
                        "warning": {
                          "color": "orange",
                          "index": 1
                        },
                        "info": {
                          "color": "blue",
                          "index": 2
                        }
                      }
                    }
                  ]
                }
              ]
            }
          ]
        }
      },
      {
        "id": 5,
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 16
        },
        "type": "stat",
        "title": "Total Protocols Monitored",
        "targets": [
          {
            "format": "table",
            "group": [],
            "metricColumn": "none",
            "rawQuery": true,
            "rawSql": "SELECT COUNT(DISTINCT protocol_name) as count FROM protocol_snapshots",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "value",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        }
      },
      {
        "id": 6,
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 6,
          "y": 16
        },
        "type": "stat",
        "title": "Open Alerts",
        "targets": [
          {
            "format": "table",
            "group": [],
            "metricColumn": "none",
            "rawQuery": true,
            "rawSql": "SELECT COUNT(*) as count FROM protocol_alerts WHERE resolved_at IS NULL",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "value",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "green"
                },
                {
                  "value": 1,
                  "color": "orange"
                },
                {
                  "value": 5,
                  "color": "red"
                }
              ]
            }
          }
        }
      },
      {
        "id": 7,
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 12,
          "y": 16
        },
        "type": "stat",
        "title": "Critical Alerts (24h)",
        "targets": [
          {
            "format": "table",
            "group": [],
            "metricColumn": "none",
            "rawQuery": true,
            "rawSql": "SELECT COUNT(*) as count FROM protocol_alerts WHERE severity = 'critical' AND triggered_at > NOW() - INTERVAL '24 hours'",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "value",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "green"
                },
                {
                  "value": 1,
                  "color": "red"
                }
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 18,
          "y": 16
        },
        "type": "stat",
        "title": "Total TVL",
        "targets": [
          {
            "format": "table",
            "group": [],
            "metricColumn": "none",
            "rawQuery": true,
            "rawSql": "SELECT SUM(tvl_usd) as total_tvl FROM (SELECT DISTINCT ON (protocol_name) protocol_name, tvl_usd FROM protocol_snapshots ORDER BY protocol_name, timestamp DESC) as latest",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "value",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD"
          }
        }
      }
    ]
  },
  "overwrite": true
}
